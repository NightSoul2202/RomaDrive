@{
    ViewData["Title"] = "Upload Page";
}

<div id="dropZone">
    <p>Перетягніть сюди файл для завантаження</p>
    <div id="progressBarContainer" style="width: 300px; border: 2px solid #ccc; border-radius:7px; margin-top: 10px; display: none;">
        <div id="progressBar" style="width: 0%; border-radius:5px; background-color: #4CAF50; color: white; text-align: center;">0%</div>
    </div>
</div>

<script src="~/js/UploadPage.js"></script>

<script>
    function resizeDynamicDiv() {
        var windowHeight = window.innerHeight - 150;
        document.getElementById('dropZone').style.height = windowHeight + 'px';
    }

    window.addEventListener('load', resizeDynamicDiv);
    window.addEventListener('resize', resizeDynamicDiv);
</script>